<%- layout('layouts/main.ejs') %>
<div class="imagen_principal">

    <div class="contenedor_menu">
        <div class="menu_posicionizquierda">
            <ul>
                <li class="letrasmenu_izquierdo"><a href="">jeans</a></li>
                <li class="letrasmenu_izquierdo"><a href="">Playeras</a></li>
